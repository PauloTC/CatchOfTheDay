/*
  Possible Animations:
  enter
  exit
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
    transform: translateX(-120%)
    max-height: 0
    padding 0 !important
    &.order-enter-active
          transition 0.5s
          transform: translateX(0%)
          max-height: 60px
          padding 2rem 0 !important
          
.order-exit
    transform: translateX(0%)
    &.order-exit-active
          transition 0.5s
          transform: translateX(120%)
          padding 0
.count-enter
    transform translateY(100%)
    &.count-enter-active
          transition: 0.5s
          transform translateY(0%)
.count-exit
    transform translateY(0%)
    position: absolute
    left: 0
    bottom: 0
    &.count-exit-active
          transition: 0.5s
          transform translateY(-100%)